{
  "manifest_version": 2,

  "name": "WikiRaces",
  "description": "Race your friends in the most competitive wikipedia event of the century!",
  "version": "0.0.1",

  "icons": {
    "16": "",
    "32": "",
    "48": "",
    "128": ""
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/main.js"],
    "css": ["css/style.css"]
  }],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "WikiRaces"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}