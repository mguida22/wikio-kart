{
  "manifest_version": 2,

  "name": "WikiRaces",
  "description": "Race your friends in the most competitive wikipedia event of the century!",
  "version": "0.0.1",

  "icons": {
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["vendor/jquery-2.1.4.min.js","js/main.js", "js/popup.js"],
    "css": ["css/main.css"]
  }],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "WikiRaces"
  },

  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "tabs",
    "http://*/*", 
    "https://*/*"]
}

