{
  "manifest_version": 2,

  "name": "Wikio-Kart",
  "description": "Race your friends in the most competitive wikipedia event of the century!",
  "version": "0.0.1",

  "icons": {
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["vendor/jquery-2.1.4.min.js", "js/content.js","js/popup.js"],
    "css": ["css/main.css"]
  }],

   "background": {
    "scripts": ["js/main.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Wikio-Kart"
  },

  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "https://wikiokart.com/*"]
  },

  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*"]
}
